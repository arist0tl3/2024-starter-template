{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "importHelpers": true,
    "outDir": "dist",
    "strict": true,
    "noEmit": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["generated.ts", "tsconfig.json"]
}
